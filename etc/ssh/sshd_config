#
# SSHD_CONF="/etc/ssh/sshd_config";
#
# See the sshd_config(5) manpage for details
#

AddressFamily inet

AllowTcpForwarding no

AuthenticationMethods publickey,keyboard-interactive

AuthorizedKeysFile /etc/ssh/authorized_keys/%u

ChallengeResponseAuthentication yes

ClientAliveCountMax 10

ClientAliveInterval 30

DenyUsers boneal

IgnoreRhosts yes

HostbasedAuthentication no

LoginGraceTime 60

LogLevel INFO

MaxAuthTries 1

MaxSessions 10

MaxStartups 10:30:60

PasswordAuthentication no

PermitEmptyPasswords no

PermitRootLogin no

PermitUserEnvironment no

PermitTunnel no

Port 22
Port 24

PrintLastLog yes

PrintMotd no

Protocol 2

PubkeyAuthentication yes

StrictModes yes

TCPKeepAlive no

SyslogFacility AUTH

UseDNS no

UsePAM yes

X11DisplayOffset 10

X11Forwarding yes

#####   SFTP-ONLY USERS (NO SSH)
#
Subsystem sftp internal-sftp -l INFO

# ------------------------------------------------------------
#
#		SFTP Jailed Users
#
Match Group sftp_jailed_users
	AuthenticationMethods publickey
	ChrootDirectory %h
	AllowAgentForwarding no
	X11Forwarding no
	ForceCommand internal-sftp
#
# addgroup --system "sftp_jailed_users"; # Add SFTP jail group
#
# usermod -G "sftp_jailed_users" "USERNAME"; # Apply SFTP jail (to user)
#
# ------------------------------------------------------------
#
#		SFTP over Port-24
#
Match LocalAddress 52.15.93.108, 18.220.12.125, 13.58.94.67, 18.220.169.43, 13.59.148.38, 54.236.236.117, 54.210.52.140, 104.211.5.215 LocalPort 24
	AuthenticationMethods publickey
	AllowAgentForwarding no
	X11Forwarding no
	ForceCommand internal-sftp
#
# addgroup --system "sftp_port24_users";  # Add port-24 SFTP group
#
#	usermod -G "sftp_port24_users" "USERNAME"; # Allow Port-24 SFTP (to user)
#
# ------------------------------------------------------------

Match User jenkins_ssh LocalAddress 52.15.93.108, 18.220.12.125, 13.58.94.67, 18.220.169.43, 13.59.148.38, 54.236.236.117, 54.210.52.140, 104.211.5.215 LocalPort 22
	AuthenticationMethods publickey

